using namespace std;
int main()
{
	
			double x1 = -1;
			double fx1 = x1 * 2 + cos(x1) - 0.5;
			double x2 = 1;
			double fx2 = x2 * 2 + cos(x2) - 0.5;
			double x3 = x1 - (x2 - x1) * fx1 / (fx2 - fx1);
			while (abs(x3 - x1) > 0.0001)
			{
				x1 = x3;
				fx1 = x1 * 2 + cos(x1) - 0.5;
				fx2 = x2 * 2 + cos(x2) - 0.5;
				x3 = x1 - (x2 - x1) * fx1 / (fx2 - fx1);
			}
