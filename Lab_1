using System;

namespace Lab_one.one
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Enter first side:");
            string side1 = Console.ReadLine();
            int a = Convert.ToInt32(side1);
            Console.WriteLine("Enter second side:");
            string side2 = Console.ReadLine();
            int b = Convert.ToInt32(side2);
            int P = 2*a + 2*b;
             Console.WriteLine("P=" + P);
        int S = a * b;
       
        Console.WriteLine("S=" + S);
            Console.ReadKey();
        }
    }
}
using System;

namespace Lab_one.two
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Enter diam:");
            string diam = Console.ReadLine();
            int d = Convert.ToInt32(diam);
            float PI = 3.14f;
            int pi = Convert.ToInt32(PI);

            
            int L = pi * d;
            Console.WriteLine("L=" + L);

            
            Console.ReadKey();
        }
    }
}
