

using System;
using System.IO;
using System.Collections.Generic;
namespace twentytwo.two
{
    class Program
    {
        static void Main(string[] args)
        { int i,j = 0;
            string TEXT;
           
            int N = Convert.ToInt32(Console.ReadLine());
            int K = Convert.ToInt32(Console.ReadLine());
           string k = "*";
            string text = TEXT = "";

            for (i = 0; i < N; i++)
            {
                text = "\n";
                for (j = 0; j < K; j++)
                    text = text + k;
                TEXT = TEXT +text;
            }
               
            string writePath = @"C:\Users\elodo\Desktop\универ\hta.txt";
           
            try
            {
                using (StreamWriter sw = new StreamWriter(writePath, false, System.Text.Encoding.Default))
                {
                    sw.WriteLine( TEXT);
                }
                using (StreamWriter sw = new StreamWriter(writePath, true, System.Text.Encoding.Default))
                {
                    sw.WriteLine("Дозапись");

                }
                Console.WriteLine("Zapis' vipolnena");

            }
            catch (Exception e)
            {
                Console.WriteLine(e.Message);
            }


        }
    }
}
using System;
using System.IO;
using System.Threading.Tasks;
using System.Text;
using System.Linq;
using System.Collections.Generic;

namespace twentytwo.one
{
    class Program
    {
        static void Main(string[] args)
        {
            int i, j;
            i = j = 0;

            StreamReader sr = new StreamReader(@"C:\Users\elodo\Desktop\универ\22.1.txt");
           
            string file1 = sr.ReadToEnd();
            Console.WriteLine("Iznachal'naya stroka" + file1);
            StreamWriter sw = new StreamWriter(@"C:\Users\elodo\Desktop\универ\22.11.txt");
            char[] mass = new char[100];
            for (i = 0; i < file1.Length; i++)
                mass[i] = file1[i];
            for (i = 0; i < file1.Length; i++)
                if (mass[i] == ' ')
                {
                    j = i;
                    break;
                }
            char[] izm = new char[100];
            for (i = j-1; file1.Length > i; i++)
            {

                izm[i] = mass[j];

                j++;

                sw.Write(mass[j]);
                Console.Write(izm[i]);


            }
           
        }
    }
}



using System;
using System.IO;
using System.Threading.Tasks;
using System.Text;
using System.Linq;
using System.Collections.Generic;

namespace twentytwo.three
{
    class Program
    {
        static void Main(string[] args)
        {
            int i, j;
            string ar, arr;
            ar = arr = "\0";
            i = j = 0;



            string writePath = @"C:\Users\elodo\Desktop\универ\shta.txt";
            string readPath = @"C:\Users\elodo\Desktop\универ\ta.txt";

            try
            {
                using (StreamReader sr = new StreamReader(writePath))
                {
                    Console.WriteLine(sr.ReadToEnd());

                    ar = Convert.ToString(sr);

                }


                using (StreamReader sw = new StreamReader(readPath))
                {
                    Console.WriteLine(sw.ReadToEnd());
                    arr = Convert.ToString(sw);
                }
               
 string TEXT = arr + "\n" + ar;
                using (StreamWriter tr = new StreamWriter(readPath, true, System.Text.Encoding.Default))
                {
                    tr.WriteLine(TEXT);
                }
            }


            catch (Exception e)
            {
                Console.WriteLine(e.Message);
            }


        }
    }
}



