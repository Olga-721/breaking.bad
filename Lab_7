using System;

namespace Lab7_four
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите А");
            int A = Convert.ToInt32(Console.ReadLine());
            int a = A/100;
            int b = A / 10 - a*10;
            int c = A % 10;
            if (a > b && b > c)
                Console.WriteLine("Последовательность цифр нисходящая");
            else
                if (a < b && b < c)
                Console.WriteLine("Последовательность цифр восходящая");
            else
                Console.WriteLine("Это простая последовательность");
            
           
        }
    }
}
using System;

namespace Lab7_five
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите А");
            int A = Convert.ToInt32(Console.ReadLine());
            int a = A/1000;
            int b = A / 100 - a*10;

            int c = (A%100- A%10)/10;
            int d = A % 10;
            if (d==a && b==c)
                Console.WriteLine("Данное число является палиндромом");
            else
                Console.WriteLine("Данное число незеркальное");
           
            
           
        }
    }
}
using System;

namespace Lab7_six
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите А");
            int A = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Введите В");
            int B = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Введите С");
            int C = Convert.ToInt32(Console.ReadLine());


            if ((A * A == B * B + C * C) | (B * B == C * C + A * A) | (C * C == B * B + A * A))
            Console.WriteLine("Данный треугольник прямоугольный");
            else
                Console.WriteLine("Данный треугольник непрямоугольный");
           
            
           
        }
    }
}
using System;

namespace Lab7_seven
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите А");
            int A = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Введите В");
            int B = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Введите С");
            int C = Convert.ToInt32(Console.ReadLine());


            if ((A < B + C) | (B < A + C) | (C < A + B))
            Console.WriteLine("Данная фигура является треугольником");
            else
                Console.WriteLine("Данная фигура не является треугольником");
           
            
           
        }
    }
}

